# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Alpha Vantage API Configuration
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Yahoo Finance Configuration (no key needed for basic usage)
# Uncomment if using premium features
# YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here

# Database Configuration
DATABASE_PATH=data/futures_analysis.db
DATABASE_BACKUP_PATH=data/backups/

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=futures_analysis.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Data Ingestion Configuration
DEFAULT_PERIOD=1mo
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Risk-Free Rate for Options Pricing (as decimal)
RISK_FREE_RATE=0.05

# Feature Flags
ENABLE_OPTIONS_PRICING=true
ENABLE_REAL_TIME_DATA=false
ENABLE_BACKTESTING=false

# Alert Configuration (future enhancement)
# ALERT_EMAIL=your-email@example.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-specific-password
